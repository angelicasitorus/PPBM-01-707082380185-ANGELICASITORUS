<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f0ebd8">
    <androidx.appcompat.widget.Toolbar
        android:background="#780000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="kembali"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tombol_devinfo"
                android:background="@drawable/baseline_menu_24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="navbar"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:backgroundTint="#800007"
        android:background="@drawable/rec">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/logorobotik"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="ROBOTIC SAS"
                    android:textSize="32sp"
                    android:textColor="#e7c6ff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="ROBOTIC SAS adalah sebuah studi grup yang bergerak dibidang robotik berada dibawah naungan Fakultas Ilmu Terapan. "
                    android:textSize="20sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kegiatan"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:backgroundTint="#a7c957"
                    android:background="@drawable/shadow"
                    android:layout_width="120dp"
                    android:layout_height="70dp">
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Kontes Robot Indonesia"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#ffd60a"
                    android:background="@drawable/shadow"
                    android:layout_width="120dp"
                    android:layout_height="70dp">
                    <TextView
                        android:text="KKCTBN"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#c8b6ff"
                    android:background="@drawable/shadow"
                    android:layout_width="120dp"
                    android:layout_height="70dp">
                    <TextView
                        android:text="SAUVC"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#90e0ef"
                    android:background="@drawable/shadow"
                    android:layout_width="120dp"
                    android:layout_height="70dp">
                    <TextView
                        android:text="HOLIDAY"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Kami"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="70dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tombol_struktur"
                    android:backgroundTint="#b56576"
                    android:drawableStart="@drawable/grup"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:text="Struktur Kepengurusan"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:contentDescription="struktur pengurus robotic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="70dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tombol_prestasi"
                    android:backgroundTint="#52b788"
                    android:drawableStart="@drawable/baseline_emoji_events_24"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:text="Prestasi"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:contentDescription="prestasi robotic sas"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="70dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tombol_sosmed"
                    android:backgroundTint="#b56576"
                    android:drawableStart="@drawable/hp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:text="Social Media"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:contentDescription="social media robotic sas"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:layout_width="400dp"
                android:layout_height="70dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tombol_history"
                    android:backgroundTint="#52b788"
                    android:drawableStart="@drawable/baseline_history_edu_24"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:text="Sejarah"
                    android:textSize="19dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:contentDescription="sejarah robotic sas"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RatingBar
            android:id="@+id/rBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:theme="@style/Widget.AppCompat.RatingBar"
            android:numStars="5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/button"
            android:backgroundTint="#780000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Rating"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>